<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPrimeiraVez"
    android:background="@drawable/templatenub">

    <ImageView
        android:id="@+id/logoNu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold"
        android:text="Um mundo\nfinanceiro sem\ncomplexidades"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toTopOf="@+id/btnComecar"

        app:layout_constraintStart_toStartOf="@id/btnComecar"/>

    <Button
        android:id="@+id/btnComecar"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:backgroundTint="@color/roxo"
        android:text="ComeÃ§ar"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>